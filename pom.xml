    <profile>
      <id>purge-postgres</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>sql-maven-plugin</artifactId>
            <version>1.5</version>

            <dependencies>
              <!-- specify the dependent jdbc driver here -->
              <dependency>
                <groupId>org.postgresql</groupId>
                <artifactId>postgresql</artifactId>
                <version>${postgresql.version}</version>
              </dependency>
            </dependencies>

            <!-- common configuration shared by all executions -->
            <configuration>
              <driver>${alfresco.db.datasource.class}</driver>
              <url>${alfresco.db.controlurl}</url>
              <username>${alfresco.db.username}</username>
              <password>${alfresco.db.password}</password>
              <!-- You can comment out username/password configurations and have maven to look them up in your settings.xml using ${settingsKey} -->
              <settingsKey>sensibleKey</settingsKey>
              <!--all executions are ignored if -Dmaven.test.skip=true -->
              <skip>${maven.test.skip}</skip>
            </configuration>

            <executions>
              <execution>
                <id>drop-db-before-test-if-any</id>
                <phase>process-test-resources</phase>
                <goals>
                  <goal>execute</goal>
                </goals>
                <configuration>
                  <!-- need another database to drop the targeted one -->
                  <autocommit>true</autocommit>
                  <sqlCommand>DROP DATABASE "${alfresco.db.name}";</sqlCommand>
                  <!-- ignore error when database is not avaiable -->
                  <onError>continue</onError>
                </configuration>
              </execution>

              <execution>
                <id>create-db</id>
                <phase>process-test-resources</phase>
                <goals>
                  <goal>execute</goal>
                </goals>
                <configuration>
                  <!-- no transaction -->
                  <autocommit>true</autocommit>
                  <sqlCommand>CREATE DATABASE "${alfresco.db.name}" WITH OWNER = ${alfresco.db.username}
       ENCODING = 'UTF8'
       LC_COLLATE = 'en_US.UTF-8'
       LC_CTYPE = 'en_US.UTF-8'
       CONNECTION LIMIT = -1;</sqlCommand>
                </configuration>
              </execution>
              
            </executions>
          </plugin>
        </plugins>
      </build>

    </profile>
  </profiles>

